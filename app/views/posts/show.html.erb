<h1>Thanks for posting</h1>
<h3><%=@post.title%><h3>
  <p><%= @post.body %></p>
  <%#= byebug %>
<% if can? :modify, @post %>
<%#= right now there is no owner for the post so no owner can modify it %>
<%= link_to "Edit", edit_post_path(@post)  %>
<%= link_to "Delete",post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %>
<%#=after deleting redirect to show page  %>
<% end %>
<h3>Comments</h3>
<%= form_for [@post, @comment] do |f| %>
<%#= form_for @comment, url: post_comments_path(@post) do |f| %>

<div>
  <%= f.label :body %>
  <%= f.text_area :body %>
</div>
<p><%= f.submit %></p>
<% end %>


<% @post.comments.each do |com| %>
<%#=all the comments belonging to that post  %>
  <%= com.body %>


  <%#=error because need to have @post, com and edit_post_comment_path  %>
  
  <%= link_to "Delete", post_comment_path(@post, com), method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %>

  <div>
  <% if user_signed_in? && com.favourited_by?(current_user)%>
    <%#= Notice: both `favourite_of` and `favourited_by` are methods we defined inside `comment.rb` %>
    <%= link_to "UnFavourite", favourite_path(com.favourite_of(current_user)), method: :delete %>
  <% else %>
    <%= link_to "Favourite", post_comment_favourites_path(@post, com), method: :post %>
  <% end %>
  </div>

  <hr>
<% end %>
